<form id="tastings-create">
  <div class="form-group">
    <input type="text" class="form-control" name="tasting[appearance]" placeholder="appearance"/>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="tasting[nose]" placeholder="nose"/>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="tasting[palate]" placeholder="palate"/>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="tasting[conclusions]" placeholder="conclusions"/>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="tasting[user_id]" value="{{userId}}" hidden/>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="tasting[wine_id]" value="{{wineId}}" hidden/>
  </div>
  <button type="submit" class="btn btn-primary btn-wines-create">Create Tasting</button>
</form>
